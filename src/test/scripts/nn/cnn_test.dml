#source("scripts/nn/examples/mnist_lenet.dml") as mnist_lenet
source("src/test/scripts/nn/mnist_lenet_paramserv.dml") as mnist_lenet

# Read images and labels
images = read($images)
n = nrow(images)
labels = read($labels)

# Scale images to [-1,1], and one-hot encode the labels
images = (images / 255.0) * 2 - 1
labels = table(seq(1, n), labels+1, n, 10)

# Split into training (246,000 examples) and validation (10,000 examples)
X = images[10001:n,]
X_val = images[1:10000,]
y = labels[10001:n,]
y_val = labels[1:10000,]

# Train
[W1, b1, W2, b2, W3, b3, W4, b4] = mnist_lenet::train(X, y, X_val, y_val, C, Hin, Win, epochs)